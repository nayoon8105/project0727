<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<insert id="insert" parameterType="test.member.dto.MemberDto">
	<!-- insert문을 지칭하는 방법은 namespace.id - member.insert -->
		INSERT INTO member
		(num, name, addr)
		VALUES(member_seq.NEXTVAL, #{name}, #{addr}) <!-- 자동으로 MemberDto의 파라미터로 insert문을 바인딩 해 줌 -->
	</insert>
	
	<update id="update" parameterType="memberDto">
		UPDATE member
		SET name=#{name}, addr=#{addr}
		WHERE num=#{num}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM member
		WHERE num=#{num}
	</delete>
	
	<select id="getData" parameterType="int" resultType="memberDto">
	<!-- 결과는 dto로 반환돼야 하므로 resultType명시 --> 
		SELECT num,name,addr 
		FROM member
		WHERE num=#{num}
	</select>
						<!--  select 된 row를 어디다 담을 지  -->
	<select id="getList" resultType="memberDto">
		SELECT *
		FROM member
		ORDER BY num ASC
	</select>
</mapper>